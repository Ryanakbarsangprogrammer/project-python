while True:
     text = "WELCOME TO MY PROGRAM"
     print(f"{text:-^100}")

     print("""Soal no 1 :
              di bawah ini ada dampak pemanasan global
              1. Es di kutub mencair
              2. Suhu bumi meningkat
              3. bumi semakin membaik
              4. daratan akan tenggelam
              5. manusia hidup damai
             
              Berikut ini yang merupakan dampak pemanasan global ditunjukkan oleh nomor:
              A. 1,3,5               C. 1,2,5
              B. 1,2,4               D. 1,3,5
              """)
    
     item1 = input("Masukkan jawaban anda : ")

     if item1.lower() == "a":
         print("Jawaban anda salah")

     elif item1.lower() == "b":
         print("Jawaban anda benar")

     elif item1.lower() == "c":
         print("Jawaban anda salah")

     elif item1.lower() == "d":
         print("Jawaban anda salah")

     else:
         print("Jawaban tidak ada di pilihan")

     print("""Soal no 2 :
              Cara menjaga bumi dari pemanasan global adalah
             
              A. Menanam pohon pohon        C. Membakar sampah
              B. Rebahan                    D. Bakar rumah
              """)
    
     item2 = input("Masukkan jawaban anda : ")

     if item2.lower() == "a":
         print("Jawaban anda benar")

     elif item2.lower() == "b":
         print("Jawaban anda salah")

     elif item2.lower() == "c":
         print("Jawaban anda salah")

     elif item2.lower() == "d":
         print("Jawaban anda salah")

     else:
         print("Jawaban tidak ada di pilihan")

     end = input("Apakah anda masih ingin melanjutkannya (y/n) : ")

     if end.lower() == "n":
         print("PROGRAM TELAH SELESAI")
         break
